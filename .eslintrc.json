{
    "env": {
        "browser": false,
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error","unix"],
        "quotes": ["error","double"],
        "no-unused-vars": ["off", { "vars": "all", "args": "after-used" }],
        "no-console": ["off"],
        "semi": ["error", "always"]
    }
}
